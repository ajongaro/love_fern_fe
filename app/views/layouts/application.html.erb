<!DOCTYPE html>
<html>
  <head>
    <title>LoveFernFe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="container">
    <% if flash.any? %>
      <% flash.each do |key, value| -%>
        <% if key == 'error' %>
          <section class="alert alert-danger"><%= value.html_safe %></section>
        <% elsif key == 'notice' %>
          <section class="alert alert-warning"><%= value.html_safe %></section>
        <% elsif key == 'success' %>
          <section class="alert alert-success"><%= value.html_safe %></section>
        <% end %>
      <% end -%>
    <% end %>
    <nav class='navbar navbar-default'>
      <div class='container-fluid'>
        <div class='navbar-header'>
          <%= link_to 'Love Fern', root_path, class: 'navbar-brand' %>
        </div>
        <ul class='nav navbar-nav'>
          <% if current_user %>
            <li><%= link_to 'Greenhouse', greenhouse_path %></li>
          <% end %>
          <li><%= link_to 'About', about_path %></li>
          <% if current_user %>
            <li><%= link_to 'Log Out', session_path, method: :delete %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <header>
      <h1>
        Love Fern
      </h1>
    </header>
    <%= yield %>
  </body>
</html>
