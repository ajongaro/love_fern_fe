<div class='text-center'>
  <h2>Plant New Fern</h2>
</div>

<div class='col-sm-4'>
</div>
<div class='col-sm-4'>
  <%= form_with url: '/ferns', method: :post, local: true do |f| %>
    <div class='form-group'>
      <%= f.label :name, 'Name:' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :shelf, 'Shelf:' %>
      <%= f.select :shelf, ['Friends', 'Family', 'Romantic', 'Business'], class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :preferred_contact_method, 'Preferned Contact Method:' %>
      <%= f.text_field :preferred_contact_method, class: 'form-control' %>
    </div>
    <%= f.submit 'Plant!' %>
  <% end %>
</div>